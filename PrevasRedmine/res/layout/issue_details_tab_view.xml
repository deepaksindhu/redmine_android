<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:padding="5dp">
    
    <LinearLayout 
        android:id="@+id/author_layout"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:padding="2dp" >
    	
	    <TextView
	        android:id="@+id/txt_author"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:textSize="11dp"
	        android:text="Author:" />
	
	    <TextView
	        android:id="@+id/value_author"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:textSize="11dp" />     	    
    </LinearLayout>
    
	<LinearLayout 
        android:id="@+id/tracker_layout"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_below="@id/author_layout"
    	android:padding="2dp" >
    	
	    <TextView
	        android:id="@+id/txt_tracker"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:textSize="11dp"
	        android:text="Tracker:" />
	
	    <TextView
	        android:id="@+id/value_tracker"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:textSize="11dp" />     
   	</LinearLayout>
   	
	<LinearLayout 
        android:id="@+id/priority_layout"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_below="@id/tracker_layout"
    	android:padding="2dp" >
    	
	    <TextView
	        android:id="@+id/txt_priority"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:textSize="11dp"
	        android:text="Priority:" />
	
	    <TextView
	        android:id="@+id/value_priority"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:textSize="11dp"  />      
   	</LinearLayout>
   	
	<LinearLayout 
        android:id="@+id/assignedTo_layout"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_below="@id/priority_layout"
    	android:padding="2dp" >
    	
	    <TextView
	        android:id="@+id/txt_assignee"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:textSize="11dp"
	        android:text="Assigned to:" />
	
	    <TextView
	        android:id="@+id/value_assignee"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:textSize="11dp"  />      
   	</LinearLayout>
   	
	<LinearLayout 
        android:id="@+id/category_layout"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_below="@id/assignedTo_layout"
    	android:padding="2dp" >
    	
	    <TextView
	        android:id="@+id/txt_category"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:textSize="11dp"
	        android:text="Category:" />
	
	    <TextView
	        android:id="@+id/value_category"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:textSize="11dp"  />      
   	</LinearLayout>

	<LinearLayout 
        android:id="@+id/version_layout"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_below="@id/category_layout"
    	android:padding="2dp" >
    	
	    <TextView
	        android:id="@+id/txt_version"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:textSize="11dp"
	        android:text="Version:" />
	
	    <TextView
	        android:id="@+id/value_version"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:textSize="11dp"  />      
   	</LinearLayout>
   	
	<LinearLayout 
        android:id="@+id/startDate_layout"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_below="@id/version_layout"
    	android:padding="2dp" >
    	
	    <TextView
	        android:id="@+id/txt_startDate"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:textSize="11dp"
	        android:text="Start date:" />
	
	    <TextView
	        android:id="@+id/value_startDate"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:textSize="11dp"  />      
   	</LinearLayout>
   	
	<LinearLayout 
        android:id="@+id/dueDate_layout"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_below="@id/startDate_layout"
    	android:padding="2dp" >
    	
	    <TextView
	        android:id="@+id/txt_dueDate"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:textSize="11dp"
	        android:text="Due date:" />
	
	    <TextView
	        android:id="@+id/value_dueDate"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:textSize="11dp"  />      
   	</LinearLayout>
   	
	<LinearLayout 
        android:id="@+id/percentDone_layout"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_below="@id/dueDate_layout"
    	android:padding="2dp" >
    	
	    <TextView
	        android:id="@+id/txt_percentDone"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:textSize="11dp"
	        android:text="% Done:" />
	
	    <TextView
	        android:id="@+id/value_percentDone"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:textSize="11dp"  />      
   	</LinearLayout>
   	
	<LinearLayout 
        android:id="@+id/estimatedTime_layout"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_below="@id/percentDone_layout"
    	android:padding="2dp" >
    	
	    <TextView
	        android:id="@+id/txt_estimatedTime"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:textSize="11dp"
	        android:text="Estimated time(in hours):" />
	
	    <TextView
	        android:id="@+id/value_estimatedTime"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:textSize="11dp"  />      
   	</LinearLayout>
	
	
	<LinearLayout 
        android:id="@+id/remainingTime_layout"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_below="@id/estimatedTime_layout"
    	android:padding="2dp" >
    	
	    <TextView
	        android:id="@+id/txt_remainingTime"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:textSize="11dp"
	        android:text="Remaining time(in hours):" />
	
	    <TextView
	        android:id="@+id/value_remainingTime"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:textSize="11dp"  />      
   	</LinearLayout>
   	
	<LinearLayout 
        android:id="@+id/spentTime_layout"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_below="@id/remainingTime_layout"
    	android:padding="2dp" >
    	
	    <TextView
	        android:id="@+id/txt_spentTime"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:textSize="11dp"
	        android:text="Spent time(in hours):" />
	
	    <TextView
	        android:id="@+id/value_spentTime"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:textSize="11dp"  />      
   	</LinearLayout>
   	
	<LinearLayout 
        android:id="@+id/createdOn_layout"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_below="@id/spentTime_layout"
    	android:padding="2dp" >
    	
	    <TextView
	        android:id="@+id/txt_createdOn"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:textSize="11dp"
	        android:text="Created:" />
	
	    <TextView
	        android:id="@+id/value_createdOn"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:textSize="11dp"  />      
   	</LinearLayout>
   	
	<LinearLayout 
        android:id="@+id/updatedOn_layout"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content"
    	android:layout_below="@id/createdOn_layout"
    	android:padding="2dp" >
    	
	    <TextView
	        android:id="@+id/txt_updatedOn"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:textStyle="bold"
	        android:textSize="11dp"
	        android:text="Updated:" />
	
	    <TextView
	        android:id="@+id/value_updatedOn"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:layout_weight="1"
	        android:textSize="11dp"  />      
   	</LinearLayout>
   	
</RelativeLayout>
